{
    "name": "FastSpeech2",
    "n_gpu": 1,
    "arch": {
        "type": "FastSpeechModel",
        "args": {
            "vocab_size": 300,
            "max_seq_len": 3000,
            "encoder_dim": 256,
            "encoder_n_layer": 4,
            "encoder_head": 2,
            "encoder_filter_size": 1024,
            "decoder_dim": 256,
            "decoder_n_layer": 4,
            "decoder_head": 2,
            "decoder_filter_size": 1024,
            "fft_kernel": [9, 1],
            "fft_padding": [4, 0],
            "duration_predictor_filter_size": 256,
            "duration_predictor_kernel_size": 3,
            "pitch_predictor_filter_size": 256,
            "pitch_predictor_kernel_size": 3,
            "energy_predictor_filter_size": 256,
            "energy_predictor_kernel_size": 3,
            "dropout": 0.1,
            "PAD": 0,
            "num_mels": 80,
            "min_pitch": 59.913448819015024,
            "max_pitch": 887.2688230720693,
            "min_energy": 15.023643,
            "max_energy": 91.4197,
            "num_bins": 256
        }
    },
    "data": {
        "train": {
            "batch_size": 20,
            "batch_expand_size": 24,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "LJDataset",
                    "args": {
                        "mel_ground_truth": "/kaggle/input/fastspeecch-dataset/data/data/mels",
                        "alignment_path": "/kaggle/input/fastspeecch-dataset/data/data/alignments",
                        "pitch_path": "/kaggle/input/fastspeecch-dataset/data/data/pitch",
                        "energy_path": "/kaggle/input/fastspeecch-dataset/data/data/energy",
                        "data_path": "/kaggle/input/fastspeecch-dataset/data/data/train.txt",
                        "text_cleaners": ["english_cleaners"],
                        "batch_expand_size": 24
                    }
                }
            ]
        }
    },

    "inference_texts": {},
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 1e-3,
            "weight_decay": 1e-6
        }
    },
    "loss": {
        "type": "FSLoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 3000,
            "epochs": 120,
            "anneal_strategy": "cos",
            "max_lr": 1e-3,
            "pct_start": 0.1
        }
    },
    "test_texts": ["My name is Kirill Korolev and i am going to smash your head with my precious hammer",
                   "English you speak it motherfucker", "pull up on the tank and e ya edu v boi" ],
    "trainer": {
        "batch_expand_size": 24,
        "epochs": 120,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "min loss",
        "early_stop": 50,
        "visualize": "wandb",
        "wandb_project": "fastspeech_project",
        "run_name": "MyanSpeech2",
        "sample_rate": 16000,
        "len_epoch": 3000,
        "log_step": 50,
        "grad_norm_clip": 1,
        "batch_accum_steps": 1
    }
}